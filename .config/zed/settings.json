// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "buffer_font_family": "JetBrains Mono",
  "theme": "Catppuccin Mocha (Blur)",
  "terminal": {
    "font_size": 15
  },
  "features": {
    "copilot": false,
    "inline_completion_provider": "supermaven"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "assistant": {
    "default_model": {
      "provider": "ollama",
      "model": "llama3.1:latest"
    },
    "version": "2"
  },
  "inlay_hints": {
    "enabled": false
  },
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": false
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "outline_panel": {
    "dock": "left"
  },
  "project_panel": {
    "dock": "right"
  },
  "tabs": {
    "git_status": true
  }
}
