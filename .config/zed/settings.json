{
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "buffer_font_family": "TX-02",
  "theme": "Poimandres (custom)",
  "terminal": {
    "font_size": 14
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never"
  },
  "auto_install_extensions": {
    "html": true,
    "git-firefly": true,
    "make": true,
    "dockerfile": true,
    "ruff": true
  },
  "features": {
    "inline_completion_provider": "none",
    "copilot": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    }
  },
  "inlay_hints": {
    "enabled": false
  },
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": false
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "outline_panel": {
    "dock": "left"
  },
  "project_panel": {
    "dock": "right",
    "scrollbar": {
      "show": "system"
    }
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "formatter": "language_server",
  "languages": {
    "Python": {
      "language_servers": [
        "ruff"
      ],
      "code_actions_on_format": {
        "source.fixAll.ruff": true,
        "source.organizeImports.ruff": true
      }
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll": true,
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll": true,
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "Svelte": {
      "code_actions_on_format": {
        "source.fixAll": true,
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "Go": {
      "code_actions_on_format": {
        "source.fixAll": true,
        "source.organizeImports": true
      }
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "gofumpt": true,
        "buildFlags": [
          "-tags=integrationtest,integration,manual,wireinject"
        ],
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true
        }
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "customTags": [
            "!reference sequence"
          ],
          "format": {
            "enable": false,
            "singleQuote": true
          }
        }
      }
    }
  }
}
