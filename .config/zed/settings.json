{
	"ui_font_size": 16,
	"buffer_font_size": 14,
	"buffer_font_family": "TX-02",
	"theme": "Poimandres (custom)",
	"terminal": {
		"font_size": 14
	},
	"vim_mode": true,
	"auto_install_extensions": {
		"html": true,
		"git-firefly": true,
		"make": true,
		"dockerfile": true,
		"ruff": true,
		"biome": true
	},
	"features": {
		"edit_prediction_provider": "none",
		"copilot": false
	},
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"assistant": {
		"dock": "left",
		"version": "2",
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-3-7-sonnet-thinking-latest"
		}
	},
	"inlay_hints": {
		"enabled": false
	},
	"toolbar": {
		"quick_actions": false,
		"breadcrumbs": false
	},
	"git_panel": {
		"dock": "right"
	},
	"collaboration_panel": {
		"button": false
	},
	"notification_panel": {
		"button": false
	},
	"chat_panel": {
		"button": "never"
	},
	"outline_panel": {
		"button": false
	},
	"project_panel": {
		"dock": "right",
		"scrollbar": {
			"show": "system"
		}
	},
	"tabs": {
		"file_icons": true,
		"git_status": true
	},
	"formatter": "language_server",
	"languages": {
		"YAML": {
			"format_on_save": "off"
		},
		"Python": {
			"language_servers": ["ruff"],
			"code_actions_on_format": {
				"source.fixAll.ruff": true,
				"source.organizeImports.ruff": true
			}
		},
		"Svelte": {
			"code_actions_on_format": {
				"source.organizeImports": true
			}
		},
		"JavaScript": {
			"language_servers": ["biome"],
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"TypeScript": {
			"language_servers": ["biome"],
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"TSX": {
			"language_servers": ["biome"],
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"JSON": {
			"language_servers": ["biome"]
		},
		"JSONC": {
			"language_servers": ["biome"]
		},
		"Go": {
			"code_actions_on_format": {
				"source.fixAll": true,
				"source.organizeImports": true
			}
		}
	},
	"lsp": {
		"gopls": {
			"initialization_options": {
				"staticcheck": true,
				"analyses": {
					"SA4006": false
				},
				"gofumpt": true,

				// Generally we want to include all the files we're going to edit so the LSP
				// doesn't complain about missing imports or other problems
				"buildFlags": ["-tags=integrationtest,integration,manual,wireinject"],
				"hints": {
					"assignVariableTypes": true,
					"compositeLiteralFields": true,
					"compositeLiteralTypes": true,
					"constantValues": true,
					"parameterNames": true,
					"rangeVariableTypes": true
				}
			}
		},
		"yaml-language-server": {
			"settings": {
				"yaml": {
					// Even with this for some reason there's a yellow (instead of red) underline :/
					"customTags": ["!reference sequence"]
				}
			}
		}
	}
}
