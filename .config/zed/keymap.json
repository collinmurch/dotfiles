[
  {
    "context": "Editor",
    "bindings": {
      "cmd-shift-c": null
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-e": "project_panel::ToggleFocus",
      "cmd-shift-g": "git_panel::ToggleFocus",
      "cmd-shift-d": "debug_panel::ToggleFocus",
      "cmd-shift-t": "terminal_panel::ToggleFocus",
      "cmd-?": "agent::ToggleFocus"
    }
  },

  // Left dock panels: pressing the same key while focused closes the left dock
  {
    "context": "AgentPanel",
    "bindings": { "cmd-?": "workspace::ToggleLeftDock" }
  },

  // Right dock panels: pressing the same key while focused closes the right dock
  {
    "context": "ProjectPanel",
    "bindings": { "cmd-shift-e": "workspace::ToggleRightDock" }
  },
  {
    "context": "GitPanel",
    "bindings": { "cmd-shift-g": "workspace::ToggleRightDock" }
  },

  // Bottom dock panels: pressing the same key while focused closes the bottom dock
  {
    "context": "DebugPanel",
    "bindings": { "cmd-shift-d": "workspace::ToggleBottomDock" }
  },
  {
    "context": "Terminal",
    "bindings": { "cmd-shift-t": "workspace::ToggleBottomDock" }
  }
]
